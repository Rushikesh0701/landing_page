# Shopify OAuth Credentials
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret

# Your Shopify store domain (e.g., your-store.myshopify.com)
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com

# Your Shopify Storefront Access Token (for Storefront API)
SHOPIFY_STOREFRONT_TOKEN=your-storefront-access-token

# OAuth Scopes (comma-separated)
SHOPIFY_SCOPES=read_products,read_orders,write_orders,read_checkouts,write_checkouts

# Redirect URI for OAuth callback
SHOPIFY_REDIRECT_URI=http://localhost:8080/auth/shopify/callback

# Frontend URL (for redirects after auth)
FRONTEND_URL=http://localhost:5173

# Server port
PORT=8080
